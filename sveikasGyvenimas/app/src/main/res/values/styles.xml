<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#ecf0f1</item>
        <item name="colorControlActivated">#ecf0f1</item>
        <item name="colorControlHighlight">#ecf0f1</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Base.V7.Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">#1b1b1b</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#8f8f8f</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>


    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimaryDark">#236a99</item>
    <item name="colorPrimary">#2980b9</item>
    <item name="colorAccent">#f39c12</item>
        <item name="colorControlNormal">#2c3e50</item>
        <item name="colorControlActivated">#2c3e50</item>
        <item name="colorControlHighlight">#2c3e50</item>
</style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorPrimary">#2980b9</item>
        <item name="colorControlNormal">#ecf0f1</item>
        <item name="colorControlActivated">#ecf0f1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlHighlight">#ecf0f1</item>
        <item name="colorAccent">#f39c12</item>
    </style>

</resources>
