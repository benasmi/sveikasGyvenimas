<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.AskQuestionsActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/email_form"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UŽDUOTI NAUJĄ KLAUSIMĄ"
            android:id="@+id/ask_new_question_txt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="28dp" />


        <EditText
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:id="@+id/email_message"

            android:background="@drawable/borders_question_email"
            android:paddingLeft="7dp"
            android:hint="Jūsų klausimas, pasirinktam specialistui"
            android:textSize="15dp"
            android:textColorHint="#ecf0f1"
            android:textColor="#ffffff"
            android:gravity="top|left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/linearlayout" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:id="@+id/ask"
            android:background="@drawable/ask_pro"
            android:text="Klausti !"
            android:textColor="#ffffff"
            android:layout_below="@+id/email_message"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ask_new_question_txt"
            android:id="@+id/linearlayout"
            android:layout_marginTop="10dp">

            <Spinner
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:id="@+id/spinner"
                android:background="@drawable/borders_question_email"
                android:paddingLeft="7dp" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:id="@+id/subject_email"
                android:background="@drawable/borders_question_email"
                android:paddingLeft="7dp"
                android:textSize="15dp"
                android:textColorHint="#ecf0f1"
                android:textColor="#ffffff"
                android:hint="Tema"
                android:layout_below="@+id/ask_new_question_txt"
                android:layout_toRightOf="@+id/linearlayout"
                android:layout_toEndOf="@+id/linearlayout"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/email_form"
        android:id="@+id/recycler_layout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D.U.K"
            android:id="@+id/faq_txt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textIsSelectable="false" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:id="@+id/questions_recycler"
            android:layout_below="@+id/faq_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>


</RelativeLayout>
