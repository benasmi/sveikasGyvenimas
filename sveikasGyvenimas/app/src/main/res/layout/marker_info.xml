<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/marker_info">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#CC1D1D"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/event_name_marker"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Blaivybės paroda"
            android:background="#00796B" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/event_date_marker"
                android:textSize="15dp"
                android:background="#009688"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Rugpjūčio 18, Litexpo parodų rūmai" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="5dp"></LinearLayout>


</LinearLayout>