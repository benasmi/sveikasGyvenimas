<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.InsertFaqActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/faq_title"
        android:drawablePadding="5dp"
        android:layout_below="@+id/body_fact_admin"
        android:layout_centerHorizontal="true"
        android:hint="DUK klausimas"
        android:textSize="15dp"
        android:background="@drawable/button_borders_different_color"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/faq_body"
        android:drawablePadding="5dp"
        android:hint="DUK atsakymas"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:background="@drawable/button_borders_different_color"
        android:paddingLeft="10dp"
        android:layout_below="@+id/faq_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatButton
        android:text="Pridėti DUK klausimą"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="insertFaq"
        android:background="#34495e"
        android:layout_below="@+id/faq_body"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_faq_question" />
</RelativeLayout>
