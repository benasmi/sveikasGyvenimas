<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ask_professional"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ask_professional_background"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.AskProfessionalActivity">


    <EditText
        android:layout_width="375dp"
        android:layout_height="170dp"
        android:id="@+id/email_message"
        android:background="@drawable/transparent_backgrounds"
        android:paddingLeft="7dp"
        android:hint="Jūsų klausimas, pasirinktam specialistui."
        android:textSize="15dp"
        android:textColor="#FFF1C40F"
        android:textColorHint="#eac73c"
        android:gravity="top|left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linearlayout" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:id="@+id/ask"
        android:background="@drawable/game_over_buttons"
        android:text="Klausti !"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/email_message"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ask_new_question_txt"
        android:id="@+id/linearlayout"
        android:layout_marginTop="10dp">

        <Spinner
            android:layout_height="35dp"
            android:id="@+id/spinner"
            android:background="@drawable/transparent_backgrounds"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Užduok klausimą"
        android:id="@+id/ask_new_question_txt"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Jūsų užduotas klausimas bus nusiųstas specialistui į paštą. Atsakymą gausite į elektroninį laišką, kurį panaudojote prisiregistruoajnt aplikacijoje."
        android:layout_width="375dp"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ask"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView15" />

    <TextView
        android:text="*Toksikologas - nuodus, jų ypatybes, tiriantis specialistas."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView16" />

</RelativeLayout>
