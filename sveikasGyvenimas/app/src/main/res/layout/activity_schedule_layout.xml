<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthyLifeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map_container"></RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_name"
        android:text="&quot;Sveikas gyvenimas - gyvenimas be alkoholio&quot;"
        android:gravity="center"
        android:layout_below="@+id/map_container"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_description"
        android:text="Šiuo projektu mes siekiame padaryti jus blaiviais, kad nerukytumėte jokių cigarų ir negertumėte alkoholioŠiuo projektu mes siekiame padaryti jus blaiviais, kad nerukytumėte jokių cigarų ir negertumėte alkoholio Šiuo projektu mes siekiame padaryti jus blaiviais, kad nerukytumėte jokių cigarų ir negertumėte alkoholio"
        android:layout_below="@+id/project_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="16dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_client"
        android:layout_below="@+id/project_description">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>