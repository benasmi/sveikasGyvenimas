<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.LoginActivity"
    android:background="#4CAF50">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#388E3C"
        android:theme="@style/AppThemeBar"
        />

    <RelativeLayout
        android:layout_below="@id/my_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout2">

        <EditText
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:textColorHint="#ecf0f1"
            android:id="@+id/login_username_text"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Vartotojo vardas"
            android:paddingLeft="5dp" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="#ecf0f1"
            android:id="@+id/login_password_text"
            android:layout_below="@+id/login_username_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Slaptažodis"
            android:paddingLeft="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prisijungti"
            android:textColor="#ecf0f1"
            android:id="@+id/login_button"
            android:layout_below="@+id/login_password_text"
            android:layout_alignParentRight="true"
            android:onClick="logIn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_borders_green" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Spausk čia, kad susikurtum!"
        android:id="@+id/register_link"
        android:clickable="true"
        android:textColor="#ecf0f1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/register_link"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayout3">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:id="@+id/leftLine"
        android:background="#ecf0f1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="arba"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ecf0f1"
            android:id="@+id/textView2"
            android:layout_toRightOf="@id/leftLine"
            android:gravity="top" />

        <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
            android:layout_marginTop="7dp"
        android:id="@+id/rightLine"
        android:background="#ecf0f1"
            android:layout_toRightOf="@id/textView2" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Neturi paskyros?"
        android:id="@+id/textView"
        android:clickable="true"
        android:textColor="#ecf0f1"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
