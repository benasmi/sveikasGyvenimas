<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/facts_item_layout"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:text="Kiek alkoholio tave nužudo?"
            android:id="@+id/fact_title"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:linksClickable="true"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:text="Kiek išgersi, tiek nepragersi. Kas čia išvis per klausimas. Dar reikia užpildyti teksto šiek tiek. Ok, užteks."
            android:textColor="#000000"
            android:id="@+id/fact_text"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/fact_image"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:linksClickable="true"
            android:layout_marginLeft="3dp"
            android:text="Šaltinis: www.google.com"
            android:gravity="left"
            android:id="@+id/fact_source"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:drawableLeft="@drawable/fb_icon_small"
                android:paddingLeft="7dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/facebook_share_fact"
                android:background="@drawable/blue_borders"
                android:text="DALINTIS"
                android:textSize="10dp"
                android:textColor="#ffffff" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>