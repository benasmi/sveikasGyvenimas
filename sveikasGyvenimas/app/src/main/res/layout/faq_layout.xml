<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="42dp"
    android:id="@+id/text_wrap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/question_title_layout">>


        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Ar galima vairuoti išgėrus ?"
            android:id="@+id/question_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"

            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/arrow_image"
            android:src="@drawable/arrow_down"


            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView2"
            android:background="#adadad"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_title_layout"
        android:layout_centerHorizontal="true"
        android:id="@+id/question_body_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Vadovaujantis Lietuvos Respsudaryti as visais su darbu susijusiais aspektais.  as visais su darbu susijusiais aspektais"
            android:id="@+id/question_body"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="15dp" />
    </RelativeLayout>




</RelativeLayout>