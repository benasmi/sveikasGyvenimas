<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.GameScreen">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/top_image"
        android:layout_height="250dp"
        android:layout_above="@+id/bottom_image"
        android:layout_centerHorizontal="true"
        android:background="@color/com_facebook_button_background_color_disabled" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/bottom_image"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/cast_intro_overlay_button_background_color" />

    <TextView
        android:text="...kuris stipresnis?..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/which_is_stronger"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:gravity="center"
        android:layout_above="@+id/top_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Vodka"
        android:layout_width="wrap_content"
        android:textSize="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/bottom_title" />

    <TextView
        android:text="99%"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_title"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/bottom_volume" />

    <TextView
        android:text="50%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/top_volume"
        android:layout_above="@+id/bottom_image"
        android:layout_centerHorizontal="true"
     />

    <TextView
        android:text="Sultys"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_title"
        android:layout_above="@+id/top_volume"
        android:layout_alignLeft="@+id/bottom_title"
        android:layout_alignStart="@+id/bottom_title" />
</RelativeLayout>
