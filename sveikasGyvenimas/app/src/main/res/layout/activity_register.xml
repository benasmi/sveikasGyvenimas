<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"

    android:background="#009688"
    tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00796B"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout4">

        <TextView
            android:text="Grįžti atgal ir prisijungti"
            android:onClick="goBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registracija"
        android:textColor="#FFFFFF"
        android:id="@+id/register_textview"
        android:textSize="40dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true" />

    <RelativeLayout

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/register_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:id="@+id/name"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColorHint="#999999"
            android:hint="Vardas"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp"
            android:maxLength="18" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:textColorHint="#999999"
            android:id="@+id/password"
            android:hint="Slaptažodis"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp"
            android:maxLength="18" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:id="@+id/repeat_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Kartoti slaptažodį"
            android:paddingLeft="10dp"
            android:textColorHint="#999999"
            android:textColor="#999999"
            android:layout_alignTop="@+id/password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp"
            android:maxLength="18" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="38dp"
            android:id="@+id/mail"
            android:hint="El. Paštas"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:layout_below="@+id/username"
            android:textColorHint="#999999"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:textColor="#999999"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:id="@+id/years"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/button_borders_different_color"
             />

        <Spinner
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:id="@+id/gender"
            android:layout_below="@id/password"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/years"
            android:layout_alignLeft="@+id/last_name"
            android:layout_alignStart="@+id/last_name"
            android:background="@drawable/button_borders_different_color" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="38dp"
            android:textColorHint="#999999"
            android:id="@+id/username"
            android:hint="Vartotojo vardas"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#999999"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp"
            android:maxLength="32" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:id="@+id/last_name"
            android:layout_weight="1"
            android:textColorHint="#999999"
            android:hint="Pavardė"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:background="@drawable/button_borders_different_color"
            android:textSize="15dp"
            android:maxLength="18"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/button_borders_green"
        android:text="Registruotis !"
        android:id="@+id/register"
        android:textColor="#ffffff"
        android:onClick="register"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.AppCompatButton>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#ecf0f1"
        android:text="Su vienu paštu galima susikurti tik vieną paskyrą(t.y jeigu susikursite paprastą paskyra, negalėsite prisijungti su 'facebook' paskyra, jei ji naudos tą patį el. paštą)
"
        />

</RelativeLayout>
