<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_quiz_acitivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.sveikata.productions.mabe.sveikasgyvenimas.YouLostHigherLowerAcitivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:id="@+id/gif_background_quiz"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000000"/>


    <android.support.v7.widget.AppCompatButton
        android:text="Grįžti atgal"
        android:textColor="#f1c40f"
        android:layout_width="200dp"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:background="@drawable/game_over_buttons"
        android:id="@+id/go_back_to_play_bar_quiz"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/try_again_quiz"
        android:layout_alignStart="@+id/try_again_quiz"/>


    <android.support.v7.widget.AppCompatButton
        android:text="Bandyti dar kartą !"
        android:layout_width="200dp"
        android:textColor="#f1c40f"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:background="@drawable/game_over_buttons"
        android:id="@+id/try_again_quiz"
        android:layout_above="@+id/go_back_to_play_bar_quiz"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Geriausias tavo rezultatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/textView12_quiz"
        android:textSize="15dp"
        android:layout_above="@+id/highscore_game_over_quiz"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:textSize="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/score_game_over_quiz"
        android:textColor="#f1c40f"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Tu surinkai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/textView10_quiz"
        android:textSize="20dp"
        android:layout_above="@+id/score_game_over_quiz"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f1c40f"
        android:textSize="20dp"
        android:id="@+id/highscore_game_over_quiz"
        android:layout_above="@+id/textView10_quiz"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:drawableLeft="@drawable/fb_icon_small"
        android:paddingLeft="7dp"
        android:id="@+id/share_score_quiz"
        android:background="@drawable/blue_borders"
        android:text="DALINTIS"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/try_again_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:clickable="false"
        android:layout_above="@+id/textView12_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"/>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="30dp"
        android:id="@+id/percentage_txt"
        android:layout_above="@+id/rating"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

</RelativeLayout>

